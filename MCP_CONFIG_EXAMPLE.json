{
  "//": "=========================================================",
  "//": "DuckDB Knowledge Base MCP Configuration",
  "//": "=========================================================",
  "//": "",
  "//": "INSTRUCTIONS:",
  "//": "1. Copy this entire file content",
  "//": "2. Find your Claude Code MCP config file:",
  "//": "   - macOS: ~/Library/Application Support/Claude/claude_desktop_config.json",
  "//": "   - Windows: %APPDATA%/Claude/claude_desktop_config.json",
  "//": "   - Linux: ~/.config/claude/claude_desktop_config.json",
  "//": "3. If the file exists, ADD the 'duckdb-kb' entry inside 'mcpServers'",
  "//": "4. If the file doesn't exist, create it with this content",
  "//": "5. Replace YOUR-USERNAME with your actual username",
  "//": "6. Replace 'your-openai-api-key-here' with your OpenAI API key",
  "//": "   Get one at: https://platform.openai.com/api-keys",
  "//": "7. Save and restart Claude Code completely",
  "//": "",
  "//": "NOTE: Remove all '//' comment lines before saving!",
  "//": "JSON doesn't support comments, these are for reference only.",
  "//": "=========================================================",

  "mcpServers": {
    "duckdb-kb": {
      "command": "/Users/YOUR-USERNAME/duckdb-kb/venv/bin/python",
      "args": [
        "/Users/YOUR-USERNAME/duckdb-kb/mcp_server.py"
      ],
      "env": {
        "OPENAI_API_KEY": "your-openai-api-key-here",
        "KNOWLEDGE_DB_PATH": "/Users/YOUR-USERNAME/duckdb-kb/knowledge.duckdb",
        "EMBEDDING_PROVIDER": "openai"
      }
    }
  }
}
